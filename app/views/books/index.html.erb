<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><p class="text-center">Title</p></th>
      <th><p class="text-center">Body</p></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy',book_path(book.id) , method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="field">
  <h2>New book</h2>


  <% if @book.errors.any? %>
   <div id="error_explanation">
     <h2 id="error_title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
     <ul>
       <% @book.errors.full_messages.each do |message|%>
       <li><%= message %></li>
       <% end %>
     </ul>
   </div>

  <% end %>

  <%= form_with model:@book do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>

