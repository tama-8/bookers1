<h2>Editing book</h2>

<% if @book.errors.any? %>
   <div id="error_explanation">
     <h2 id="error_title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
     <ul>
       <% @book.errors.full_messages.each do |message|%>
       <li><%= message %></li>
       <% end %>
     </ul>
   </div>

  <% end %>

<%= form_with model: @book do |f| %>

 <div class="<%= 'error' if @book.errors.any? %>">
<label for="book_title">Title</label>
<%= f.text_field :title %>
</div>

 <div class="<%= 'error' if @book.errors.any? %>">
<label for="book_body">Body</label>
<%= f.text_area :body %>
</div>

<div class= "actions">
 <%= f.submit 'Update Book' %>
</div>

<tr>
   <td><%= link_to 'Show', book_path(@book.id) %></td>
   <td>|</td>
   <td><%= link_to 'Back', books_path %></td>

  </tr>
<% end %>